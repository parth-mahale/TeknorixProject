@model Teknorix_project.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="container" id="main-container">
    <div class="row">
        <div class="col-sm-12">
            <div class="container" id="main-container">
                <div class="jumbotron">
                    <h1>Teknorix Technologies </h1>
                    <p>Teknorix is a global software development company based in India. We build amazing software solutions to help your business scale greater heights.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-2" style="text-align:center;">
        <ul class="nav nav-pills nav-stacked" data-spy="affix" data-offset-top="205" style="display:inline;">
            <li>
                @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary" })
            </li>
            @*<li><a href="#section3">Section 3</a></li>*@
        </ul>
    </div>
    <div class="col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center; margin-bottom:1%;">
                <img src="~/Images/img_avatar1.png" id="EmpImg" class="media-object"> <strong>Edit Employee Details</strong>
            </div>
            <div class="panel-body" style="text-align:center;">
                @*<div class="row">
                    <div class="col-md-4">*@
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>First Name: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Last Name: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Gender: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="Gender" class="form-control" />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Addrerss: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Phone No: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Mobile No: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="MobileNumber" class="form-control" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label>Department: </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                @*<select asp-for="DeptID" class="form-control" asp-items="@(new SelectList(ViewBag.DeptList, "DeptID", "DepartmentName"))"></select>*@
                                @Html.DropDownList("DeptID", new SelectList(ViewBag.DeptList, "DeptID", "DepartmentName"), new { @class = "form-control" })
                                <span asp-validation-for="DeptID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Delete", "Delete", null, new { @id = Model.ID }, new { @class = "btn btn-danger" })

                    </div>
                </form>
                @*</div>
                    </div>*@
            </div>
        </div>
    </div>
</div>

@*<div>
    <a asp-action="Index" >Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
